<h1>Listing used_ingredients</h1>

<table>
  <tr>
    <th>Ingredient</th>
    <th>Recipe</th>
    <th>Entered amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @used_ingredients.each do |used_ingredient| %>
  <tr>
    <td><%= used_ingredient.ingredient_id %></td>
    <td><%= used_ingredient.recipe_id %></td>
    <td><%= used_ingredient.entered_amount %></td>
    <td><%= link_to 'Show', [@recipe, used_ingredient] %></td>
    <td><%= link_to 'Edit', edit_recipe_used_ingredient_path(@recipe, used_ingredient) %></td>
    <td><%= link_to 'Destroy', [@recipe, used_ingredient], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

